<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Google Login</title>
</head>
<body>
    <div>
        <p>Readirecting to google...</p>
    </div>
</body>

<script>
    (async () => {
        try {
            response = await fetch("<%= betterAuthUrl %>/api/auth/sign-in/social", {
                method : "POST",
                headers : {
                    "Content-Type" : "application/json"
                },
                credentials : "include",
                body : JSON.stringify({
                    provider : "google",
                    callbackURL : "<%= callbackURL %>"
                })
            })

            const data = await response.json();

            console.log(data)

            if (data.url) {
                window.location.href = data.url
            } else {
                document.body.innerHTML = `<p> Error occured while redirecting to google.</p>`
            }

        } catch (error) {
            document.body.innerHTML = `<p> Error occured while redirecting to google : ${error.message}</p>`
        }
    })()
</script>

</html>